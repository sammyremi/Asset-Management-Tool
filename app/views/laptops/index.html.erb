<p style="color: green"><%= notice %></p>

<h1>Laptops</h1>

<% if Laptop.count < 1 %>
  <%= link_to "New laptop", new_laptop_path %>
<% else %>
  <table class="table table-striped">
    <thead class="table-dark">
      <tr>
        <th scope="col">Manufacturer</th>
        <th scope="col">Brand</th>
        <th scope="col">Zone</th>
        <th scope="col">Department</th>
        <th scope="col">Desk_id</th>
        <th scope="col">Condition</th>
        <th scope="col">State</th>
        <th scope="col">Serial_number</th>
        <th scope="col">Location</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @laptops.each do |laptop| %>
        <tr>
          
          <td><%= laptop.manufacturer %></td>
          <td><%= laptop.brand_model %></td>
          <td><%= laptop.zone %></td>
          <td><%= laptop.department %></td>
          <td><%= laptop.desk_id %></td>
          <td><%= laptop.condition %></td>
          <td><%= laptop.asset_state %></td>
          <td><%= laptop.serial_number %></td>
          <td><%= laptop.location %></td>
          <td>
            <%= link_to "Show this laptop", laptop %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to "New laptop", new_laptop_path %>
<% end %>
