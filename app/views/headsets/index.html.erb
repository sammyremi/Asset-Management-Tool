<p style="color: green"><%= notice %></p>

<% if Headset.count < 1 %>
  <%= link_to "New headset", new_headset_path %>
<% else %>
  <table class="table table-striped">
    <thead class="table-dark">
      <tr>
        <th scope="col">Manufacturer</th>
        <th scope="col">Brand</th>
        <th scope="col">Zone</th>
        <th scope="col">Department</th>
        <th scope="col">Desk_id</th>
        <th scope="col">Condition</th>
        <th scope="col">State</th>
        <th scope="col">Serial_number</th>
        <th scope="col">Location</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @headsets.each do |headset| %>
        <tr>
          
          <td><%= headset.manufacturer %></td>
          <td><%= headset.brand_model %></td>
          <td><%= headset.zone %></td>
          <td><%= headset.department %></td>
          <td><%= headset.desk_id %></td>
          <td><%= headset.condition %></td>
          <td><%= headset.asset_state %></td>
          <td><%= headset.serial_number %></td>
          <td><%= headset.location %></td>
          <td>
            <%= link_to "Show this headset", headset %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to "New headset", new_headset_path %>
<% end %>